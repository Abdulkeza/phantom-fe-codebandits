{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always",
        "jsx": "always"
      }
   ],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "func-style": ["error", "declaration", { "allowArrowFunctions": true }]
  },
  "prettier/prettier": [
    "error", 
    {
      "bracketSpacing": true,
      "semi": true,
      "singleQuote": true,
      "trailingComma": "none",
      "printWidth": 80,
      "tabWidth": 2
    }
  ]
}
